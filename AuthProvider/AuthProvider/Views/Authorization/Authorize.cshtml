@using Microsoft.Extensions.Primitives
@model AuthProvider.ViewModels.AuthorizeViewModel
@{
    ViewData["Title"] = "Authorize Access";
}

<div class="flex-1 flex flex-col justify-center py-12 sm:px-6 lg:px-8">
    <div class="mt-8 sm:mx-auto sm:w-full sm:max-w-md">
        <div class="bg-white py-8 px-4 shadow-xl border border-gray-100 sm:rounded-xl sm:px-10">

            <div class="mb-8 text-center">
                <div class="mx-auto flex items-center justify-center h-16 w-16 rounded-full bg-indigo-50 mb-4 border-2 border-dashed border-indigo-200">
                    <svg class="h-8 w-8 text-indigo-600" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor">
                        <path stroke-linecap="round" stroke-linejoin="round" d="M9 12.75L11.25 15 15 9.75m-3-7.036A11.959 11.959 0 013.598 6 11.99 11.99 0 003 9.749c0 5.592 3.824 10.29 9 11.623 5.176-1.332 9-6.03 9-11.622 0-1.31-.21-2.571-.598-3.751h-.152c-3.196 0-6.1-1.248-8.25-3.285z" />
                    </svg>
                </div>
                <h2 class="text-2xl font-bold text-gray-900">Permission Request</h2>
                <p class="mt-2 text-sm text-gray-600">
                    <span class="font-bold text-indigo-600">@Model.ApplicationName</span> is requesting access to your account.
                </p>
            </div>

            <div class="space-y-3 mb-8">
                <p class="text-xs font-semibold uppercase tracking-wider text-gray-500">The application wants to:</p>
                <div class="space-y-2">
                    @foreach (var scope in (Model.Scope ?? string.Empty).Split(' ', StringSplitOptions.RemoveEmptyEntries))
                    {
                        <div class="flex items-center space-x-3 bg-gray-50 p-3 rounded-lg border border-gray-100">
                            <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5 text-green-500" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7" />
                            </svg>
                            <span class="text-sm font-medium text-gray-700">@scope</span>
                        </div>
                    }
                </div>
            </div>

            <form asp-controller="Authorization" asp-action="Authorize" method="post" class="space-y-4">
                @foreach (var parameter in Context.Request.HasFormContentType ?
                                (IEnumerable<KeyValuePair<string, StringValues>>)Context.Request.Form : Context.Request.Query)
                {
                    <input type="hidden" name="@parameter.Key" value="@parameter.Value" />
                }

                <div class="flex gap-4">
                    <button name="submit.Deny"
                            type="submit"
                            class="flex-1 px-4 py-2 rounded-md border border-gray-300 text-gray-700 font-medium bg-white hover:bg-gray-50 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-indigo-500 transition-colors"
                            value="Deny">
                        Cancel
                    </button>

                    <button name="submit.Accept"
                            type="submit"
                            class="flex-1 px-4 py-2 rounded-md bg-indigo-600 text-white font-medium hover:bg-indigo-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-indigo-500 transition-colors shadow-sm"
                            value="Allow">
                        Allow Access
                    </button>
                </div>
            </form>

            <div class="mt-8 border-t border-gray-100 pt-4">
                <p class="text-center text-xs text-gray-400">
                    Signed in as <span class="font-semibold text-gray-600">@User.Identity?.Name</span>
                </p>
            </div>
        </div>
    </div>
</div>