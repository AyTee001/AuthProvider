@using Microsoft.Extensions.Primitives
@model AuthProvider.ViewModels.AuthorizeViewModel
@{
    ViewData["Title"] = "Authorize access";
}

<div class="flex flex-1 flex-col items-center justify-center w-full h-full bg-gradient-to-br from-indigo-50 to-blue-100 px-4">
    <div class="bg-white shadow-lg rounded-2xl max-w-lg w-full p-8 space-y-6">
        <div class="text-center">
            <h1 class="text-2xl font-bold text-gray-800">
                @Model.ApplicationName is requesting access
            </h1>
            <p class="text-gray-500 mt-2">
                This app wants permission to access your account.
            </p>
        </div>

        <div class="border-t border-gray-200 pt-4 space-y-3">
            <p class="font-semibold text-gray-700 text-sm uppercase tracking-wider">Requested permissions:</p>
            <div class="space-y-2">
                @foreach (var scope in (Model.Scope ?? string.Empty).Split(' ', StringSplitOptions.RemoveEmptyEntries))
                {
                    <div class="flex items-center space-x-3 bg-gray-50 p-2 rounded-lg border border-gray-100">
                        <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5 text-indigo-500" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7" />
                        </svg>
                        <span class="text-gray-700 font-medium">@scope</span>
                    </div>
                }
            </div>
        </div>

        <form asp-controller="Authorization" asp-action="Authorize" method="post" class="space-y-4">
            @foreach (var parameter in Context.Request.HasFormContentType ?
                        (IEnumerable<KeyValuePair<string, StringValues>>)Context.Request.Form : Context.Request.Query)
            {
                <input type="hidden" name="@parameter.Key" value="@parameter.Value" />
            }

            <div class="flex gap-4">
                <button name="submit.Deny"
                        type="submit"
                        class="flex-1 px-5 py-3 rounded-xl border border-gray-300 text-gray-600 font-medium hover:bg-gray-50 transition"
                        value="Deny">
                    Cancel
                </button>

                <button name="submit.Accept"
                        type="submit"
                        class="flex-1 px-5 py-3 rounded-xl bg-indigo-600 text-white font-bold hover:bg-indigo-700 shadow-md shadow-indigo-100 transition"
                        value="Allow">
                    Allow Access
                </button>
            </div>
        </form>

        <div class="border-t border-gray-100 pt-4">
            <p class="text-xs text-gray-400 text-center">
                Signed in as <span class="font-semibold text-gray-600">@User.Identity?.Name</span>
            </p>
        </div>
    </div>
</div>