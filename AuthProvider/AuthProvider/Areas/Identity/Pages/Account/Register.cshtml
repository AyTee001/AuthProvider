@page
@model RegisterModel
@{
    ViewData["Title"] = "Register";
}

<div class="flex-1 flex flex-col justify-center py-12 sm:px-6 lg:px-8">
    <div class="mt-8 sm:mx-auto sm:w-full sm:max-w-md">
        <div class="bg-white py-8 px-4 shadow-xl border border-gray-100 sm:rounded-xl sm:px-10">

            <div class="mb-8">
                <h2 class="text-center text-3xl font-extrabold text-gray-900">
                    Create your account
                </h2>
                <p class="mt-2 text-center text-sm text-gray-600">
                    Already have an account?
                    <a asp-page="./Login" asp-route-returnUrl="@Model.ReturnUrl" class="font-medium text-indigo-600 hover:text-indigo-500 transition">
                        Sign in
                    </a>
                </p>
            </div>

            <form id="registerForm" asp-route-returnUrl="@Model.ReturnUrl" method="post" class="space-y-6 mb-4">
                <div asp-validation-summary="ModelOnly" class="p-3 rounded-md bg-red-50 text-sm text-red-700" role="alert"></div>

                <div>
                    <label asp-for="Input.Email" class="block text-sm font-medium text-gray-700">Email address</label>
                    <div class="mt-1">
                        <input asp-for="Input.Email" class="appearance-none block w-full px-3 py-2 border border-gray-300 rounded-md shadow-sm placeholder-gray-400 focus:outline-none focus:ring-indigo-500 focus:border-indigo-500 sm:text-sm" autocomplete="username" aria-required="true" placeholder="name@example.com" />
                    </div>
                    <span asp-validation-for="Input.Email" class="text-xs text-red-600 mt-1"></span>
                </div>

                <div>
                    <label asp-for="Input.Password" class="block text-sm font-medium text-gray-700">Password</label>
                    <div class="mt-1">
                        <input asp-for="Input.Password" class="appearance-none block w-full px-3 py-2 border border-gray-300 rounded-md shadow-sm placeholder-gray-400 focus:outline-none focus:ring-indigo-500 focus:border-indigo-500 sm:text-sm" autocomplete="new-password" aria-required="true" />
                    </div>
                    <span asp-validation-for="Input.Password" class="text-xs text-red-600 mt-1"></span>
                </div>

                <div>
                    <label asp-for="Input.ConfirmPassword" class="block text-sm font-medium text-gray-700">Confirm Password</label>
                    <div class="mt-1">
                        <input asp-for="Input.ConfirmPassword" class="appearance-none block w-full px-3 py-2 border border-gray-300 rounded-md shadow-sm placeholder-gray-400 focus:outline-none focus:ring-indigo-500 focus:border-indigo-500 sm:text-sm" autocomplete="new-password" aria-required="true" />
                    </div>
                    <span asp-validation-for="Input.ConfirmPassword" class="text-xs text-red-600 mt-1"></span>
                </div>

                <div>
                    <button id="registerSubmit" type="submit" class="w-full flex justify-center py-2 px-4 border border-transparent rounded-md shadow-sm text-sm font-medium text-white bg-indigo-600 hover:bg-indigo-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-indigo-500 transition-colors shadow-sm">
                        Register
                    </button>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}